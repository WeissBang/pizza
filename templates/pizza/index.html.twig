{% extends 'base.html.twig' %}

{% block title %}Elenco delle Pizze{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Le nostre deliziose pizze</h1>
    <div class="row">
        {% for pizza in pizzas %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="{{ asset(pizza.image) }}" class="card-img-top" alt="{{ pizza.name }}">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ pizza.name }}</h5>
                        <p class="card-text text-center">{{ pizza.description }}</p>
                        <p class="card-text text-center"><strong>Prezzo: â‚¬{{ pizza.price }}</strong></p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="#" class="btn btn-danger">Ordina ora</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center" role="alert">
                    Nessuna pizza disponibile al momento.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}